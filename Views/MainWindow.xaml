<Window
    x:Class="WinUIApp.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:WinUIApp.Views"
    xmlns:models="using:WinUIApp.Models"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
        <Button x:Name="myButton" Click="myButton_Click" Style="{StaticResource DefaultButton}">Click Me</Button>
        <TextBlock x:Name="myTextBlock">Mars ma de acici</TextBlock>
        <TextBlock x:Name="myTextBlock2" Text="Query result here..." FontWeight="Bold"/>

           
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        Spacing="10" 
                        Margin="0,0,0,20">
                <Button Content="Sort"
                        Background="Yellow"
                        Foreground="Black"
                        FontWeight="Bold"
                        Padding="15,8"
                        CornerRadius="5"/>
                <Button Content="Filter"
                        Background="Yellow"
                        Foreground="Black"
                        FontWeight="Bold"
                        Padding="15,8"
                        CornerRadius="5"/>
            </StackPanel>

           
            <ScrollViewer Grid.Row="1">
                <ItemsRepeater x:Name="DrinksRepeater" ItemsSource="{x:Bind DrinksList, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <UniformGridLayout MinItemWidth="200" MinItemHeight="250" MinRowSpacing="20" MinColumnSpacing="20"/>
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="models:Drink">
                            <Border Background="White" 
                                    CornerRadius="10" 
                                    Padding="15"
                                    BorderBrush="Yellow"
                                    BorderThickness="2">
                                <StackPanel Spacing="10">
                                    <Border Background="Gray" 
                                            Height="150" 
                                            CornerRadius="5">
                                        <Image Source="{x:Bind DrinkURL}" 
                                               Stretch="UniformToFill"/>
                                    </Border>
                                    <TextBlock Text="{x:Bind DrinkName}" 
                                             FontSize="18" 
                                             FontWeight="Bold"
                                             Foreground="Black"/>
                                    <TextBlock Text="{x:Bind Brand.Name}" 
                                             FontSize="14"
                                             Foreground="Black"/>
                                    <TextBlock Text="{x:Bind FormattedAlcoholContent}" 
                                             FontSize="12"
                                             Foreground="Black"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
